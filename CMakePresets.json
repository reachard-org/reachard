{
  "$schema": "https://gitlab.kitware.com/cmake/cmake/-/raw/master/Help/manual/presets/schema.json",
  "version": 10,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug Configuration Preset",
      "generator": "Ninja",
      "binaryDir": "build",
      "installDir": "install",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_C_EXTENSIONS": "OFF",
        "CMAKE_C_FLAGS_DEBUG": "-Wall -Wextra -Werror -pedantic -pedantic-errors -Wno-unused-parameter -Wno-error=unused-function -Wno-error=unused-variable -Og -ggdb3",
        "CMAKE_EXE_LINKER_FLAGS": "-no-pie",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "asan",
      "displayName": "ASAN Configuration Preset",
      "inherits": [
        "debug"
      ],
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-fsanitize=address -fno-omit-frame-pointer -fno-inline",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address"
      }
    }
  ]
}